<h1>New Weapon</h1>
<%= form_for(@weapon) do |f| %>
  <%= f.label :name %><br />
  <%= f.text_field :name %><br />
 
  <%= f.label :descriptoin %><br />
  <%= f.text_area :descriptoin %><br />
  
  <%= f.label :power_base %><br />
  <%= f.number_field :power_base %><br />

  <%= f.label :power_step %><br />
  <%= f.number_field :power_step %><br />

  <%= f.submit %>
<% end %>
<%= link_to "Voltar", weapon_path %>